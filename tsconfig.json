{
  "compilerOptions": {
    "lib": ["dom", "es2015.promise", "es2017"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "types": ["@testing-library/jest-dom", "jest"]
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "config/storybook/preview.tsx"
  ],
  "strictNullChecks": true,
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "skipLibCheck": "true",
  "jsonCompilerOptions": {
    "strictNullChecks": true
  }
}
