{
  "compilerOptions": {
    "lib": ["dom", "es2015.promise", "es2017"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
    },
    "types": ["jest"],
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx", "./config/jest/setupTest.ts"],
  "strictNullChecks": true,
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    },
  },
  "skipLibCheck": "true",
  "jsonCompilerOptions": {
    "strictNullChecks": true,
  },
}
